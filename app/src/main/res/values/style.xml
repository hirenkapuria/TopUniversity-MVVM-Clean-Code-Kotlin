<resources>
    <style name="MaterialCardViewStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="ConstraintLayoutPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="UserProfileImage">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="UserNameText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="UserTypeText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UserProfileTypeText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UserProfileLinkText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/link_color</item>
    </style>

    <style name="EmptyTextView" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">No Universities Found</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
